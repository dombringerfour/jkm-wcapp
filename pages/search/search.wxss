@import "../common/rightcontent/rightcontent";
/* pages/search/search.wxss */
page{
  height: 100%;
  width: 100%;
}
/* 搜索栏 */
.page_row{
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.search{
  width: 80%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}
.sousuo {
  margin-left: 15rpx;
  width: 15%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}
/* 推荐搜索 */
.suggestSearch{

}
.suggestSearch .suggest{
  display: block;
  font-size: 30rpx;
  margin-left: 20rpx;  
}
.suggestSearch .tab{
  border: 1px solid #999;
  color: #999;
  font-size: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  display: inline-block;
  margin-left: 20rpx;
  padding: 8rpx 20rpx;
  margin-top: 16rpx;
}

