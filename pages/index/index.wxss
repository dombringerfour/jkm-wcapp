/* pages/index/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #007722;
  overflow: hidden;
}
.image{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  display: block;
  margin: 100rpx auto 0rpx;
  overflow: hidden;
}
.text,text{
  color: white;
  display: block;
  text-align: center;
  font-size: 40rpx;
  padding: 20rpx 0;
}
button{
  font-size: 40rpx;
  margin-top: 20rpx;
  width: 400rpx;
  height: 100rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
}
button:active{
  box-shadow: 0;
}
