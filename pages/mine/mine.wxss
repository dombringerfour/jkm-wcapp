@import "../common/rightcontent/rightcontent";
/* pages/mine/mine.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #ccc;
}
/* 最外层盒子 */
.outerbox{
  height: 100%;
  width: 100%;
}
/* 顶部导航 */
.topbar{
  font-size: 30rpx;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  z-index: 100
}
.topbar view{
  flex: 1;
  line-height: 80rpx;
  text-align: center;
}
.topbar view.active{
  border-bottom: 2px solid #007722;
}
/* 内容 */
.content{
  padding-top: 80rpx;
  height: 100%;
}
/* 底部一键清空按钮 */
.content button{
  font-size: 30rpx;
  border-radius: 10rpx;
  /* font-weight: bold; */
  background-color: #fff;
}
